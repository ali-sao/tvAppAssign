{
  "expo": {
    "name": "ThamaneyahStreamingApp",
    "slug": "ThamaneyahStreamingApp", 
    "version": "1.0.0",
    "orientation": "landscape",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.thamaneyah.streamingapp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.thamaneyah.streamingapp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": []
  }
} 